<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ranking"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".Leaderboard">

    <ImageView
        android:id="@+id/imgBgLB"
        android:layout_width="397dp"
        android:layout_height="881dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rankbg" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="262dp"
                android:layout_height="51dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/leaderboard" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="118dp"
            android:layout_height="133dp"
            app:srcCompat="@drawable/pikachu_pixel" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rankings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgBgLB"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/first"
            android:layout_width="347dp"
            android:layout_height="60dp"
            android:background="@drawable/ld_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/pokemon"
                android:text="Rank 1:"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/rank1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/score1"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second"
            android:layout_width="347dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ld_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/pokemon"
                android:text="Rank 2:"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/rank2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/score2"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third"
            android:layout_width="347dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ld_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/pokemon"
                android:text="Rank 3:"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/rank3"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/score3"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fifth"
            android:layout_width="347dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ld_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/pokemon"
                android:text="Rank 5:"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/rank5"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/score5"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fourth"
            android:layout_width="347dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ld_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/pokemon"
                android:text="Rank 4:"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/rank4"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/score4"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24sp" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgExitLB"
        android:layout_width="113dp"
        android:layout_height="72dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/exit" />


</androidx.constraintlayout.widget.ConstraintLayout>