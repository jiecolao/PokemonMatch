<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/egame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkyellow"
    tools:context=".E_Game">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topbar_cardcat"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="324dp"
                android:layout_height="81dp"
                app:srcCompat="@drawable/memorymatch" />

            <ImageView
                android:id="@+id/imgPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@android:drawable/ic_media_pause" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pokemon"
                android:text="Your Score:"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/txtScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/pokemon"
                android:text="0"
                android:textAlignment="center"
                android:textColor="@color/darkyellow"
                android:textSize="34sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pokemon"
                android:text="00:00"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="48sp" />

            <ProgressBar
                android:id="@+id/barTimer"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridCardCont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.23"
        app:rowCount="3">

        <ImageView
            android:id="@+id/c1"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@drawable/game_card" />

        <ImageView
            android:id="@+id/c2"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@drawable/game_card" />

        <ImageView
            android:id="@+id/c3"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="0"
            app:srcCompat="@drawable/game_card" />

        <ImageView
            android:id="@+id/c4"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@drawable/game_card" />

        <ImageView
            android:id="@+id/c5"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@drawable/game_card" />

        <ImageView
            android:id="@+id/c6"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="1"
            app:srcCompat="@drawable/game_card" />

        <ImageView
            android:id="@+id/c7"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_column="0"
            app:layout_gravity="center"
            app:layout_row="2"
            app:srcCompat="@drawable/game_card" />

        <ImageView
            android:id="@+id/c8"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_column="1"
            app:layout_gravity="center"
            app:layout_row="2"
            app:srcCompat="@drawable/game_card" />

        <ImageView
            android:id="@+id/c9"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:layout_margin="8dp"
            app:layout_column="2"
            app:layout_gravity="center"
            app:layout_row="2"
            app:srcCompat="@drawable/game_card" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>